generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model AvaliacaoAbstrata {
  id           Int      @id @default(autoincrement())
  idAvaliador  Int
  idAvaliado   Int
  idCiclo      Int
  nota         Float?
  
  avaliacao    Avaliacao?
  avaliacao360 Avaliacao360?
}

model Avaliacao {
  id                   Int                @id @default(autoincrement())
  justificativa        String
  criterio             String
  avaliacaoAbstrataId  Int                @unique
  avaliacaoAbstrata    AvaliacaoAbstrata  @relation(fields: [avaliacaoAbstrataId], references: [id])
}

model Avaliacao360 {
  id                   Int                @id @default(autoincrement())
  pontosFortes         String
  pontosMelhora        String
  avaliacaoAbstrataId  Int                @unique
  avaliacaoAbstrata    AvaliacaoAbstrata  @relation(fields: [avaliacaoAbstrataId], references: [id])
}