generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                  @id @default(autoincrement())
  email               String               @unique
  name                String
  password            String
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  avaliacoesFeitas     AvaliacaoAbstrata[] @relation("Avaliador")
  avaliacoesRecebidas  AvaliacaoAbstrata[] @relation("Avaliado")

  @@map("users")
}

model AvaliacaoAbstrata {
  id               Int               @id @default(autoincrement())
  idAvaliador      Int
  idAvaliado       Int
  idCiclo          Int
  nota             Float?
  avaliador        User              @relation("Avaliador", fields: [idAvaliador], references: [id])
  avaliado         User              @relation("Avaliado", fields: [idAvaliado], references: [id])
  avaliacao        Avaliacao?
  avaliacao360     Avaliacao360?
}

model Avaliacao {
  id                   Int                @id @default(autoincrement())
  justificativa        String
  criterio             String
  avaliacaoAbstrataId  Int                @unique
  avaliacaoAbstrata    AvaliacaoAbstrata  @relation(fields: [avaliacaoAbstrataId], references: [id])
}

model Avaliacao360 {
  id                   Int                @id @default(autoincrement())
  pontosFortes         String
  pontosMelhora        String
  avaliacaoAbstrataId  Int                @unique
  avaliacaoAbstrata    AvaliacaoAbstrata  @relation(fields: [avaliacaoAbstrataId], references: [id])
}